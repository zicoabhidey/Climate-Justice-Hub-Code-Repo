        const clearAllBtn = document.getElementById('clearAllBtn');
        const sortDropdownButton = document.getElementById('sortDropdownButton');
        const sortDropdownLabel = document.getElementById('sortDropdownLabel');
        const sortDropdownContent = document.getElementById('sortDropdownContent');
        const sortRadios = document.querySelectorAll('.sort-radio');


        function openResource(link) {
            window.open(link, '_blank', 'noopener,noreferrer');
        }
        
        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC' };
            return new Date(dateString).toLocaleDateString('en-US', options);
        }

        function getImageUrl(url) {
            if (!url) {
                return 'https://placehold.co/600x400/e9ecef/495057?text=No+Preview';
            }
            if (url.includes('drive.google.com/file/d/')) {
                const fileIdMatch = url.match(/file\/d\/([^/]+)/);
                if (fileIdMatch && fileIdMatch[1]) {
                    return `https://drive.google.com/uc?export=view&id=${fileIdMatch[1]}`;
                }
                return 'https://placehold.co/600x400/e9ecef/495057?text=Invalid+Link';
            }
            return url;
        }

        const renderResources = (filteredResources) => {
            resourcesGrid.innerHTML = '';
            noResultsMessage.classList.toggle('hidden', filteredResources.length > 0);

            filteredResources.forEach(resource => {
                const card = document.createElement('div');
                card.className = 'resource-card';
                card.onclick = () => openResource(resource.link);
                
                const topics = resource.tags.topic || [];
                const topicsHTML = topics.map(t => `<span class="resource-tag">${t}</span>`).join('');
                const cardCategory = resource.tags.type && resource.tags.type.length > 0 ? resource.tags.type[0] : 'Resource';

                const imageUrl = getImageUrl(resource.thumbnail);
                const isPlaceholder = imageUrl.includes('placehold.co');
                const imageDivClass = isPlaceholder ? 'resource-image default-bg' : 'resource-image';
                const imageStyle = isPlaceholder ? '' : `background-image: url('${imageUrl}')`;
                const imageContent = isPlaceholder ? 'ðŸ“„' : '';

                card.innerHTML = `
                    <div class="${imageDivClass}" style="${imageStyle}">${imageContent}</div>
                    <div class="resource-content">
                        <span class="resource-category">${cardCategory}</span>
                        <h3 class="resource-title">${resource.title}</h3>
                        <p class="resource-description">${resource.subtext}</p>
                        <div class="resource-tags">${topicsHTML}</div>
                        <div class="resource-meta">
                            <div class="resource-date">
                                <span>ðŸ“…</span>
                                <span>${formatDate(resource.date)}</span>
                            </div>
                            <span class="resource-type">${resource.fileType}</span>
                        </div>
                    </div>
                `;
                resourcesGrid.appendChild(card);
            });
        };

        const updateSelectedFiltersDisplay = () => {
            while (selectedFiltersContainer.firstChild && selectedFiltersContainer.firstChild !== clearAllBtn) {
                selectedFiltersContainer.removeChild(selectedFiltersContainer.firstChild);
            }

            const activeCheckboxes = document.querySelectorAll('.filter-checkbox:checked');
            
            if (activeCheckboxes.length > 0) {
                selectedFiltersContainer.classList.remove('hidden');
                clearAllBtn.style.display = 'inline-flex';

                activeCheckboxes.forEach(checkbox => {
                    const category = checkbox.dataset.category;
                    const value = checkbox.value;

                    const tag = document.createElement('div');
                    tag.className = 'filter-tag';
                    tag.innerHTML = `
                        <span>${value}</span>
                        <span class="remove" data-category="${category}" data-value="${value}">Ã—</span>
                    `;
                    selectedFiltersContainer.insertBefore(tag, clearAllBtn);
                });
            } else {
                selectedFiltersContainer.classList.add('hidden');
                clearAllBtn.style.display = 'none';
            }

            document.querySelectorAll('.filter-tag .remove').forEach(button => {
                button.addEventListener('click', (e) => {
                    e.stopPropagation(); 
                    const category = e.target.dataset.category;
                    const value = e.target.dataset.value;
                    const checkboxToUncheck = document.querySelector(`.filter-checkbox[data-category="${category}"][value="${value}"]`);
                    if (checkboxToUncheck) {
                        checkboxToUncheck.checked = false;
                    }
                    filterAndSearch();
                });
            });
        };
        
        const filterAndSearch = () => {
            const searchTerm = searchInput.value.toLowerCase();
            
            const activeFilters = Object.keys(filterConfig).reduce((acc, category) => {
                acc[category] = Array.from(document.querySelectorAll(`.filter-checkbox[data-category="${category}"]:checked`))
                                       .map(cb => cb.value);
                return acc;
            }, {});

            let filteredResources = resources.filter(resource => {
                const searchFields = [
                    resource.title,
                    resource.subtext,
                    ...Object.values(resource.tags).flat()
                ].join(' ').toLowerCase();

                const matchesSearch = searchFields.includes(searchTerm);

                const matchesFilters = Object.keys(activeFilters).every(category => {
                    if (activeFilters[category].length === 0) return true;
                    if (!resource.tags[category] || resource.tags[category].length === 0) return false;
                    return activeFilters[category].some(filter => resource.tags[category].includes(filter));
                });
                
                return matchesSearch && matchesFilters;
            });

            const sortValue = document.querySelector('.sort-radio:checked').value;
            if (sortValue === 'date-desc') {
                filteredResources.sort((a, b) => new Date(b.date) - new Date(a.date));
            } else if (sortValue === 'date-asc') {
                filteredResources.sort((a, b) => new Date(a.date) - new Date(b.date));
            } else if (sortValue === 'title-asc') {
                filteredResources.sort((a, b) => a.title.localeCompare(b.title));
            } else if (sortValue === 'title-desc') {
                filteredResources.sort((a, b) => b.title.localeCompare(a.title));
            }

            renderResources(filteredResources);
            updateSelectedFiltersDisplay();
        };
        
        const setupFilters = () => {
            const allTags = Object.keys(filterConfig).reduce((acc, category) => {
                const categoryTags = new Set(resources.flatMap(r => r.tags[category] || []));
                acc[category] = Array.from(categoryTags).sort();
                return acc;
            }, {});
            
            Object.keys(filterConfig).forEach(category => {
                const tags = allTags[category];
                if (!tags || tags.length === 0) return;

                const groupDiv = document.createElement('div');
                groupDiv.className = 'filter-group-box';
                
                const toggleButton = document.createElement('button');
                toggleButton.className = 'filter-accordion-toggle w-full p-2 font-semibold text-sm text-left';
                toggleButton.textContent = filterConfig[category];
                toggleButton.onclick = (e) => {
                    const clickedButton = e.currentTarget;
                    const clickedContent = clickedButton.nextElementSibling;
                    const isOpening = !clickedContent.classList.contains('open');

                    document.querySelectorAll('.filter-group-content.open').forEach(openContent => {
                        if (openContent !== clickedContent) {
                           openContent.classList.remove('open');
                           openContent.previousElementSibling.classList.remove('open');
                        }
                    });

                    if (isOpening) {
                        clickedButton.classList.add('open');
                        clickedContent.classList.add('open');
                    } else {
                        clickedButton.classList.remove('open');
                        clickedContent.classList.remove('open');
                    }
                };

                const contentDiv = document.createElement('div');
                contentDiv.className = 'filter-group-content';
                
                const innerWrapper = document.createElement('div');
                innerWrapper.className = 'p-2 space-y-1';

                tags.forEach(tag => {
                    const label = document.createElement('label');
                    label.className = 'flex items-center space-x-2 cursor-pointer text-xs hover:text-brand-blue';
                    label.innerHTML = `
                        <input type="checkbox" class="filter-checkbox rounded w-3.5 h-3.5 border-gray-300 text-brand-blue focus:ring-brand-blue" data-category="${category}" value="${tag}">
                        <span title="${tag}">${tag}</span>
                    `;
                    innerWrapper.appendChild(label);
                });

                contentDiv.appendChild(innerWrapper);
                groupDiv.appendChild(toggleButton);
                groupDiv.appendChild(contentDiv);
                filtersContainer.appendChild(groupDiv);
            });
            
            document.querySelectorAll('.filter-checkbox').forEach(cb => cb.addEventListener('change', filterAndSearch));
        };
        
        clearAllBtn.onclick = () => {
            searchInput.value = '';
            document.querySelectorAll('.filter-checkbox').forEach(cb => cb.checked = false);
            document.querySelector('.sort-radio[value="date-desc"]').checked = true;
            sortDropdownLabel.textContent = 'Date (Newest)';
            filterAndSearch();
        };

        searchInput.addEventListener('input', filterAndSearch);
        
        sortDropdownButton.addEventListener('click', (e) => {
            e.stopPropagation();
            sortDropdownContent.classList.toggle('hidden');
            sortDropdownButton.classList.toggle('open');
        });

        document.addEventListener('click', () => {
            sortDropdownContent.classList.add('hidden');
            sortDropdownButton.classList.remove('open');
        });

        sortRadios.forEach(radio => {
            radio.addEventListener('change', () => {
                const selectedLabel = radio.nextElementSibling.textContent;
                sortDropdownLabel.textContent = selectedLabel;
                sortDropdownContent.classList.add('hidden');
                sortDropdownButton.classList.remove('open');
                filterAndSearch();
            });
        });
        
        document.addEventListener('DOMContentLoaded', () => {
            setupFilters();
            filterAndSearch();
        });

    </script>
</body>
</html>